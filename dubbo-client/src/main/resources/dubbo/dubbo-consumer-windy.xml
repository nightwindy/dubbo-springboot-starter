="50"/>        <!--注意该时间和dubbo自己的超时时间不要冲突，以这个时间优先，比如consumer设置3秒，那么当执行时hystrix会提前超时-->        <dubbo:parameter key="timeoutInMilliseconds" value="20000"/>        <dubbo:method name="echoWithTimeOut">            <!--fallback 降级方法-->            <dubbo:parameter key="fallback" value="helloFallBack"/>        </dubbo:method>        <dubbo:method name="echoWithException">            <dubbo:parameter key="fallback" value="helloFallBack"/>        </dubbo:method>    </dubbo:reference></beans>